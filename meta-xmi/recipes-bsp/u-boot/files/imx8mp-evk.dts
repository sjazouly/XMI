	};

	pinctrl_pmic: pmicirqgrp {
		fsl,pins = <
			MX8MP_IOMUXC_GPIO1_IO03__GPIO1_IO03	0x000001c0
		>;
	};

	 pinctrl_typec: typec1grp {
	 	fsl,pins = <
	 		MX8MP_IOMUXC_GPIO1_IO03__GPIO1_IO03	0x1c4
	 	>;
	};

